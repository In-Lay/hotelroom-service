<resources>

    <style name="Base.Theme.HotelRoomService" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/fade</item>

        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.Material3.Dialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/dialog_background_corners</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.HotelRoomService" parent="Base.Theme.HotelRoomService" />

    <style name="NavBackButton">
        <item name="android:src">@drawable/outline_arrow_back_24</item>
    </style>

    <style name="LocationImageView">
        <item name="android:src">@drawable/outline_location_on_24</item>
    </style>


    <style name="ParkingChip" parent="Widget.Material3.CardView.Filled">
        <item name="chipIcon">@drawable/outline_directions_car_24</item>
    </style>

    <style name="InternetImageView" parent="Widget.Material3.CardView.Filled">
        <item name="chipIcon">@drawable/baseline_wifi_24</item>
    </style>

    <style name="FitnessImageView" parent="Widget.Material3.CardView.Filled">
        <item name="chipIcon">@drawable/baseline_fitness_center_24</item>
    </style>

    <style name="RestaurantImageView" parent="Widget.Material3.CardView.Filled">
        <item name="chipIcon">@drawable/outline_restaurant_24</item>
    </style>

    <style name="CloseImageView">
        <item name="android:src">@drawable/outline_close_24</item>
    </style>


    <style name="NightModeImageView">
        <item name="android:src">@drawable/baseline_dark_mode_24</item>
    </style>

    <style name="LanguageImageView">
        <item name="android:src">@drawable/baseline_language_24</item>
    </style>

    <style name="NotificationsImageView">
        <item name="android:src">@drawable/baseline_notifications_24</item>
    </style>

    <style name="ArrowRightImageView">
        <item name="android:src">@drawable/baseline_keyboard_arrow_right_24</item>
    </style>


    <style name="LogoutImageView">
        <item name="android:src">@drawable/outline_logout_24</item>
    </style>

    <style name="EditImageView">
        <item name="android:src">@drawable/outline_edit_24</item>
    </style>
</resources>
